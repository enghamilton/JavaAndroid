<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- view background color -->
    <solid android:color="@color/feed_item_bg" >
    </solid>

        <!-- view border color and width -->    
    <stroke
        android:width="@dimen/profile_item_border_width"
        android:color="#CFCFCF" >
    </stroke>    
    
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">  
     <shape android:shape="rectangle"> 
      <solid android:color="#FFFFFF" />      
    </shape>
    </item> 
    
    <!-- Here is the corner radius -->
    <corners android:radius="@dimen/profile_item_corner_radius" >
    </corners>

</shape>