<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.imageslider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET"/>                  
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />	
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />	
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="info.androidhive.lazyimagedownload.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name" >            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- New Profile Activity -->
        <!--  http://developer.android.com/guide/topics/ui/actionbar.html  -->
        <activity
            android:name="info.androidhive.profile.ProfileMainActivity"
            android:label="Perfil"
            android:launchMode="singleTop"             
            android:parentActivityName="info.androidhive.lazyimagedownload.MainActivity" >
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="info.androidhive.lazyimagedownload.MainActivity" />
            <intent-filter>
    			<action android:name="android.intent.action.SEND" />
    			<category android:name="android.intent.category.DEFAULT" />
    			<data android:mimeType="text/plain"/>
			</intent-filter>
        </activity>
        
        <!-- Edit Profile Activity -->
        <!--  http://developer.android.com/guide/topics/ui/actionbar.html  -->
        <activity
            android:name="info.androidhive.profile.EditProfileActivity"
            android:label="Editar Perfil"
            android:launchMode="singleTop"             
            android:parentActivityName="info.androidhive.profile.ProfileMainActivity" >
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="info.androidhive.profile.ProfileMainActivity" />
            <intent-filter>
    			<action android:name="android.intent.action.SEND" />
    			<category android:name="android.intent.category.DEFAULT" />
    			<data android:mimeType="text/plain"/>
			</intent-filter>
        </activity>
        
        <!-- New Profile Gallery Activity -->
        <activity
            android:name="info.androidhive.profile.ProfileGalleryActivity"
            android:label="Galeria" 
            android:parentActivityName="info.androidhive.profile.ProfileMainActivity" >
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="info.androidhive.profile.ProfileMainActivity" />                                   
            <intent-filter>
    			<action android:name="android.intent.action.SEND" />
    			<category android:name="android.intent.category.DEFAULT" />
    			<data android:mimeType="text/plain"/>
			</intent-filter>
        </activity>
        
        <!-- New Grid View Gallery Activity -->
        <activity
            android:name="info.androidhive.imageslider.GridViewActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        
        <!-- New Full Screen Gallery Activity -->
        <activity
            android:name="info.androidhive.imageslider.FullScreenViewActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
        
        <!-- New Agenda Activity -->
        <activity
            android:name="info.androidhive.phpmysql.EditProductActivity"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>        
        
        <!-- New Agenda Activity -->
        <activity
            android:name="info.androidhive.phpmysql.AllProductsActivity"
            android:parentActivityName="info.androidhive.profile.ProfileMainActivity"            
            android:theme="@style/AppTheme" >
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="info.androidhive.profile.ProfileMainActivity" />    
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        
    </application>    	   

</manifest>
